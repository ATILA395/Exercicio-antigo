#Menu
    while True:
        print("\nCadastro de Clientes")
        print("0 - Fim")
        print("1 - Inclui")
        print("2 - Altera")
        print("3 - Exclui")
        print("4 - Consulta")

        opcao = input("Escolha uma opção: ")

        if opcao == '0':
            print("Saindo do programa...")
            break
        elif opcao == '1':
            print("Você escolheu incluir um cliente.")
            # Lógica para incluir um cliente
        elif opcao == '2':
            print("Você escolheu alterar um cliente.")
            # Lógica para alterar um cliente
        elif opcao == '3':
            print("Você escolheu excluir um cliente.")
            # Lógica para excluir um cliente
        elif opcao == '4':
            print("Você escolheu consultar clientes.")
            # Lógica para consultar clientes
        else:
            print("Opção inválida! Por favor, escolha uma opção válida.")

# Chamada da função para mostrar o menu
menu()
